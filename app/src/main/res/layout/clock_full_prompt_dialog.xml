<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maxReachedPrompt"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dash_margin_LRSE" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filledAtPrompt"
        android:id="@+id/reached"
        android:textSize="@dimen/rate_text"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clockFullOk"
        android:text="@string/btnSelectionOK"
        android:id="@+id/btnOK2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dash_margin_LRSE" />
</LinearLayout>